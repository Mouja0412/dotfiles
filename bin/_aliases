#!/usr/bin/env bash

alias e="$EDITOR"
if [ $(command -v nvim) ]; then
    alias v="nvim"
fi

alias hop="ssh srv.hop"
alias srv="ssh srv.ionlights"
alias nas="ssh nas.ionlights"
alias mbp="ssh mbp"
alias osx="ssh osx"

alias sshcfg="v ${CONF}/ssh/config"

alias zrc="v ${ZSH}/.zshrc && source ${ZSH}/.zshrc"
alias plugins="v ${ANTIBODY_PLUGS}.txt && antibody bundle < ${ANTIBODY_PLUGS}.txt > ${ANTIBODY_PLUGS}_${OS_}.sh && source ${ZSH}/.zshrc"

alias doom="${HOME}/.emacs.d/bin/doom"

case "${OS}" in
    "linux")
        ;;
    "macos")
        alias ls="gls"
        ;;
esac

alias l="ls -lhAF --color=always --group-directories-first"
alias ll="l"
alias lr="l -r"
alias ld="l -d */"


ignoreRegex=".*\(Permission denied\)"
ignoreRegex="${ignoreRegex}\|\(Operation not permitted\)"
alias size="du -ch -d 1 2> >(grep -v \"${ignoreRegex}\") | sort -h"

alias ca="conda activate"
alias ce="conda env create -f"

# alias rm="rmtrash"
# alias rmdir="rmdirtrash"

alias tmux="TERM=xterm-256color tmux -f ${CONF}/tmux/tmux.conf"

alias ta="tmux a -t"
alias tn="tmux new -s"
