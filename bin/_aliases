#!/usr/bin/env bash

alias e="$EDITOR"

alias hop="ssh srv.hop"
alias srv="ssh srv.ionlights"
alias nas="ssh nas.ionlights"
alias mbp="ssh mbp"
alias osx="ssh osx"

alias sshcfg="e ~/.ssh/config"

alias zrc="e ~/.zshrc && . ~/.zshrc"
alias plugins="e ${ANTIBODY_PLUGS}.txt && antibody bundle < ${ANTIBODY_PLUGS}.txt > ${ANTIBODY_PLUGS}_${OS_}.sh && . ~/.zshrc"

alias doom="~/.emacs.d/bin/doom"

case $OS_ in
    "linux")
        alias ls="ls --color=always"
    ;;
    "macos")
    ;;
esac
alias l="ls -lhAF"
alias ll="l"
alias lr="l -r"
alias ld="l -d */"


ignoreRegex=".*\(Permission denied\)"
ignoreRegex="${ignoreRegex}\|\(Operation not permitted\)"
alias size="du -ch -d 1 2> >(grep -v \"${ignoreRegex}\") | sort -h"

alias ta="tmux a -t"
alias tn="tmux new -s"

alias ca="conda activate"

# alias rm="rmtrash"
# alias rmdir="rmdirtrash"
